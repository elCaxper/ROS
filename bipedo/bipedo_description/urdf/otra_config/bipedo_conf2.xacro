    </visual>
    <collision> <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry> 
	<box size="${4*servo_caja_x} ${4*servo_caja_y} ${servo_caja_z}" /> 
      </geometry>
    </collision>
 </link> 

