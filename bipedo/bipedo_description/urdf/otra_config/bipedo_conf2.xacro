      <origin xyz="${x} ${y} ${z}" rpy="0 0 0" />
      <parent link="${side}_link" />
      <child link="${side2}_link" />
      <axis xyz="0 0 0" />
      <limit lower = "-2.5" upper = "2.5" effort="100" velocity="${velMax}" /> 
   </joint> 
   <link name="${side2}_link">
